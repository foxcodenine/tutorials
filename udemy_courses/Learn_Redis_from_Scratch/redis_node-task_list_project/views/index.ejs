<%- contentFor('main') %>

<main>

    <form action="/task/add" method="post">
        <label for="task">Add Task</label>
        <input type="text" name="task" placeholder="Add Task">
        <button type="submit">Submit</button>
    </form>

    <h3>Task List</h3>

    <form action="/task/delete" method="post">
        <ul class="task-list">
            <% tasks.forEach( task => { %>
                <li>
                    <label>
                        <input type="checkbox" name="tasks[]" class="del" value="<%= task %>">
                        <span><%= task %></span>
                    </label>
                </li>
            <% }) %>
        </ul>
        <button type="submit">Remove</button>
    </form>
    <br>

    <div class="well">
        <h3>Next Business Call</h3>
        Name: <%= call.name %><br>
        Company: <%= call.company %><br>
        Phone: <%= call.phone %><br>
        Time: <%= call.time %><br>
    </div>

    <div class="well">

        <h3>Edit Next Call</h3>
        <form action="/call/add" method="post">
            <label for="name">Contact Name</label><br>
            <input type="text" name="name" placeholder="Task Name">
            <br><br>
    
            <label for="company">Company</label><br>
            <input type="text" name="company" placeholder="Company">
            <br><br>
    
            <label for="phone">Phone</label><br>
            <input type="text" name="phone" placeholder="Phone">
            <br><br>
    
            <label for="time">Day & Time</label><br>
            <input type="text" name="time" placeholder="time">
            <br><br>
    
            <button type="submit">Sumbit</button>
        </form>
    </div>

</main>